<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <LinearLayout
        android:id="@+id/llLives"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/glCharacterButtons"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivHeart1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/heart"
            android:layout_margin="4dp" />

        <ImageView
            android:id="@+id/ivHeart2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/heart"
            android:layout_margin="4dp" />

        <ImageView
            android:id="@+id/ivHeart3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/heart"
            android:layout_margin="4dp" />

        <ImageView
            android:id="@+id/ivHeart4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/heart"
            android:layout_margin="4dp" />

        <ImageView
            android:id="@+id/ivHeart5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/heart"
            android:layout_margin="4dp" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/glWordDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:columnCount="4"
        android:rowCount="1">
    </GridLayout>

    <GridLayout
        android:id="@+id/glCharacterButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/glWordDisplay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:columnCount="4"
        android:rowCount="1">
    </GridLayout>


</RelativeLayout>
